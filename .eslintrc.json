{
  "root": true,
  "extends": [
    "airbnb",
    "plugin:vue/essential"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "amd": false
  },
  "plugins": [],
  "settings": {
    "import/resolver": {
      "babel-module": {
        "extensions": [".js", ".vue"]
      }
    }
  },
  "rules": {
    "import/extensions": ["off", "never"],
    "no-param-reassign": ["error", {
      "props": true,
      "ignorePropertyModificationsFor": [
        "state",
        "acc",
        "e"
      ]
    }],
    "operator-linebreak": ["off", "never"],
    "implicit-arrow-linebreak": ["off", "never"],
    "import/no-extraneous-dependencies": ["off", "never"]
  }
}
